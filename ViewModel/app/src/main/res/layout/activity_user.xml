<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="40dp"
        tools:context="com.androiddesdecero.viewmodel.view.UserActivity">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/name" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/age" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />

        <Button
            android:id="@+id/btn_see"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/see" />

        <TextView
            android:id="@+id/tv_userActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_data" />

        <TextView
            android:id="@+id/tv_userActivityViewModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/viewModel_data" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
